{
  "name": "@hxui/css",
  "version": "2.0.0-next.0",
  "description": "Helix User Interface Library - Pure CSS Framework",
  "author": "Design @ MD <design@medicaldirector.com>",
  "keywords": [
    "css",
    "sass"
  ],
  "style": "dist/css/main.css",
  "sass": "src/main.scss",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MedicalDirector/hxui-css.git"
  },
  "bugs": {
    "url": "https://github.com/MedicalDirector/hxui-css/issues"
  },
  "homepage": "https://hxui.io/",
  "files": [
    "./CHANGELOG.md",
    "./dist/",
    "./src/**/*.scss"
  ],
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "dep-dev": "npm pkg set dependencies.@hxui/tokens=file:packages/tokens",
    "dep-prod": "npm pkg set dependencies.@hxui/tokens=latest",
    "install-local": "npm i @hxui/tokens",
    "build": "npm run copy:fonts && npm run copy:scss && npm run compile:css && npm run install-local",
    "build:prod": "npm run copy:fonts && npm run copy:scss && npm run compile:css && npm run dep-prod",
    "build:dev": "npm run copy:fonts && npm run copy:scss && npm run compile:css && npm run dep-dev",
    "lint": "npx stylelint --cache **/*.scss",
    "lint:fix": "npx stylelint --fix **/*.scss",
    "format": "npx prettier --write .",
    "copy:fonts": "npx cpy . ../dist/fonts/ --cwd=fonts",
    "copy:scss": "npx cpy . ../dist/scss/ --cwd=src",
    "compile:css": "sass ./src/main.scss:./dist/css/main.css --error-css --no-source-map --style=compressed --load-path=../../node_modules"
  },
  "devDependencies": {
    "cpy-cli": "^4.1.0",
    "postcss": "^8.4.13",
    "postcss-scss": "^4.0.4",
    "sass": "^1.51.0",
    "stylelint": "^14.8.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "dependencies": {
    "@hxui/tokens": "^0.1.0",
    "sass-deprecate": "^1.1.3"
  }
}
