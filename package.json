{
  "name": "@hxui/css-workspace",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MedicalDirector/hxui-css.git"
  },
  "bugs": {
    "url": "https://github.com/MedicalDirector/hxui-css/issues"
  },
  "scripts": {
    "dev:docs": "npm run dev --workspace=docs",
    "build:docs": "npm run build --workspace=docs",
    "build:css": "npm run css-compile --workspace=packages/scss",
    "build:tokens": "npm run build --workspace=packages/tokens",
    "format": "npx prettier --write .",
    "prepare": "husky install"
  },
  "engines": {
    "node": "^14 || ^16",
    "npm": "^7 || ^8"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2"
  },
  "lint-staged": {
    "*.{js,vue,html}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --cache --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "./docs",
    "./packages/*"
  ]
}
